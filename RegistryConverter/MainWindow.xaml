<Window x:Class="RegistryViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registry Viewer" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column = "0" ItemsSource="{Binding SubKeys}" TreeViewItem.Expanded = "FillTheNode">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding SubSubKeys}">
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        
        <DataGrid Name="valuesDataGrid" Grid.Column = "1" AutoGenerateColumns="False" ItemsSource="{Binding Values}">
             <DataGrid.Columns>
                  <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                  <DataGridTextColumn Header="Value" Binding="{Binding Value}" />
             </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>